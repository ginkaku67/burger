<h1>Burgers!</h1>

<h2>UNDEVOURED</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li data-bid={{id}}>{{burger_name}}</li>
  {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>{{burger_name}}</li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name Your Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit">Add burger</button>
</form>